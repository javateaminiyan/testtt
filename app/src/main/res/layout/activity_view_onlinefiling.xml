<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_layout"
    tools:context="com.examp.three.activity.Profession.ViewOnlineFilingTracking">
    <RelativeLayout
        android:id="@+id/relativetoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/li_toolbar"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay"
                android:layout_marginTop="20dp">


                <android.support.v7.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/toolbar"
                    android:theme="@style/AppTheme.AppBarOverlay"
                    android:layout_marginTop="20dp"/>
            </android.support.v7.widget.Toolbar>
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/relativetoolbar"
        android:layout_marginTop="-80dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:textSize="16dp"
                            android:text="Online Filing Details"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/roboto_medium"
                                        android:text="Request No :"
                                        android:textSize="14dp"
                                        android:layout_marginTop="8dp"
                                        android:layout_gravity="right"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/roboto_medium"
                                        android:text="Mobile No"
                                        android:layout_marginTop="8dp"
                                        android:textSize="14dp"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Email Id :"
                                        android:textSize="14dp"
                                        android:layout_marginTop="8dp"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="District :"
                                        android:textSize="14dp"
                                        android:layout_marginTop="18dp"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Panchayat :"
                                        android:textSize="14dp"
                                        android:layout_marginTop="8dp"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Name :"
                                        android:textSize="14dp"
                                        android:layout_marginTop="8dp"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Financial Year :"
                                        android:textSize="14dp"
                                        android:layout_marginTop="8dp"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Assessment Type :"
                                        android:textSize="14dp"
                                        android:layout_marginTop="8dp"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Trade Name :"
                                        android:textSize="14dp"
                                        android:layout_marginTop="8dp"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Org Code :"
                                        android:textSize="14dp"
                                        android:layout_marginTop="8dp"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Org Name :"
                                        android:layout_marginTop="8dp"
                                        android:textSize="14dp"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Tax Sno :"
                                        android:layout_marginTop="8dp"
                                        android:textSize="14dp"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Trade Org Name :"
                                        android:layout_marginTop="8dp"
                                        android:textSize="14dp"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Tax No :"
                                        android:layout_marginTop="8dp"
                                        android:textSize="14dp"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Status :"
                                        android:textSize="14dp"
                                        android:layout_marginTop="8dp"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textColor="@color/black" />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/roboto_medium"
                                        android:layout_marginRight="30dp"
                                        android:textSize="14dp"
                                        android:id="@+id/tv_req_no"
                                        android:layout_marginTop="8dp"
                                        android:layout_gravity="left"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/roboto_medium"
                                        android:text="8754137752"
                                        android:id="@+id/tv_mobileno"
                                        android:layout_marginTop="8dp"
                                        android:textSize="14dp"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="murugan@gmail.com"
                                        android:textSize="14dp"
                                        android:id="@+id/tv_emailid"
                                        android:layout_marginTop="8dp"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Krishnagiri"
                                        android:textSize="14dp"
                                        android:id="@+id/tv_district"
                                        android:layout_marginTop="8dp"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Mathigiri"
                                        android:textSize="14dp"
                                        android:id="@+id/tv_panchayat"
                                        android:layout_marginTop="8dp"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Hari"
                                        android:textSize="14dp"
                                        android:id="@+id/tv_name"
                                        android:layout_marginTop="8dp"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="2018-2019"
                                        android:id="@+id/tv_finyear"
                                        android:textSize="14dp"
                                        android:layout_marginTop="8dp"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Organisation"
                                        android:id="@+id/tv_assessmenttype"
                                        android:textSize="14dp"
                                        android:layout_marginTop="8dp"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Organisation"
                                        android:id="@+id/tv_tradename"
                                        android:textSize="14dp"
                                        android:layout_marginTop="8dp"
                                        android:fontFamily="@font/avvaiyar"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="33"
                                        android:id="@+id/tv_orgcode"
                                        android:textSize="14dp"
                                        android:layout_marginTop="18dp"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Gandhi street"
                                        android:layout_marginTop="8dp"
                                        android:textSize="14dp"
                                        android:id="@+id/tv_orgname"
                                        android:fontFamily="@font/avvaiyar"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="55"
                                        android:layout_marginTop="8dp"
                                        android:textSize="14dp"
                                        android:id="@+id/tv_taxsno"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Prematix"
                                        android:layout_marginTop="18dp"
                                        android:textSize="14dp"
                                        android:id="@+id/tv_tradeorgname"
                                        android:fontFamily="@font/avvaiyar"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="55"
                                        android:layout_marginTop="18dp"
                                        android:id="@+id/tv_taxno"
                                        android:textSize="14dp"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Processed"
                                        android:textSize="14dp"
                                        android:id="@+id/tv_status"
                                        android:layout_marginTop="8dp"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textColor="@color/black" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_approval_status">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            app:cardCornerRadius="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/appstatus"
                                    android:layout_margin="10dp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/georgia"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:textSize="16dp"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/grey"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="4"
                                    android:padding="2dp"
                                    android:background="@drawable/text_background"
                                    android:layout_marginTop="8dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_medium"
                                        android:text="Sl.No"
                                        android:background="@drawable/text_background"
                                        android:layout_weight=".5"
                                        android:textAlignment="center"
                                        android:textSize="14dp"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textSize="14dp"
                                        android:background="@drawable/text_background"
                                        android:fontFamily="@font/roboto_medium"
                                        android:text="Date"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.5"
                                        android:fontFamily="@font/roboto_medium"
                                        android:text="Remarks"
                                        android:background="@drawable/text_background"
                                        android:textSize="14dp"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/roboto_medium"
                                        android:text="Status"
                                        android:textSize="14dp"
                                        android:background="@drawable/text_background"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <android.support.v7.widget.RecyclerView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/text_background"
                                    android:id="@+id/recyclerApproval"/>

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>