<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/ba_alt_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="Year : 2015 - WardNo : WD-04 "
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/ba_alt_iv_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2.5"
                    android:src="@android:drawable/ic_menu_close_clear_cancel" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/ba_alt_tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_light"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/buttonBackgroundColor"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/ba_alt_iv_gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:src="@drawable/ic_male" />

                            <TextView
                                android:id="@+id/ba_alt_tv_gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:fontFamily="@font/roboto_light"
                                android:gravity="center"
                                android:padding="4dp"
                                android:text=""
                                android:textColor="@color/buttonBackgroundColor"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:id="@+id/ba_adap_ll_name">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:fontFamily="@font/roboto_light"
                                    android:gravity="center"
                                    android:padding="4dp"
                                    android:text="Father Name"
                                    android:textSize="15dp"
                                    android:textStyle="italic"
                                    android:id="@+id/ba_adap_tv_title_name"/>

                                <TextView
                                    android:id="@+id/ba_alt_tv_father_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_light"
                                    android:gravity="center"
                                    android:padding="4dp"
                                    android:text=""
                                    android:textColor="@color/buttonBackgroundColor"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:id="@+id/ba_adap_ll_mother_name">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_margin="4dp"
                                        android:fontFamily="@font/roboto_light"
                                        android:gravity="center"
                                        android:padding="4dp"
                                        android:text="Mother Name"
                                        android:textSize="15dp"
                                        android:textStyle="italic" />

                                    <TextView
                                        android:id="@+id/ba_alt_tv_mother_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_margin="4dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/roboto_light"
                                        android:gravity="center"
                                        android:padding="4dp"
                                        android:text=""
                                        android:textColor="@color/buttonBackgroundColor"
                                        android:textSize="16dp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/line_textview_right"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:fontFamily="@font/roboto_light"
                                    android:gravity="center"
                                    android:padding="4dp"
                                    android:text="Reg No"
                                    android:textSize="15dp"
                                    android:textStyle="italic" />

                                <TextView
                                    android:id="@+id/ba_alt_tv_regNo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_light"
                                    android:gravity="center"
                                    android:padding="4dp"
                                    android:text=""
                                    android:textColor="@color/buttonBackgroundColor"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_margin="4dp"
                                        android:fontFamily="@font/roboto_light"
                                        android:gravity="center"
                                        android:padding="4dp"
                                        android:text="Reg Date"
                                        android:textSize="15dp"
                                        android:textStyle="italic" />

                                    <TextView
                                        android:id="@+id/ba_alt_tv_regDate"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_margin="4dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/roboto_light"
                                        android:gravity="center"
                                        android:padding="4dp"
                                        android:text=""
                                        android:textColor="@color/buttonBackgroundColor"
                                        android:textSize="16dp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="@drawable/line_textview_right">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:fontFamily="@font/roboto_light"
                                    android:gravity="center"
                                    android:padding="4dp"
                                    android:text="Place of Birth"
                                    android:textSize="15dp"
                                    android:textStyle="italic"
                                    android:id="@+id/ba_adap_tv_title_placeof"/>

                                <TextView
                                    android:id="@+id/ba_alt_tv_placeOfBirth"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_light"
                                    android:gravity="center"
                                    android:padding="4dp"
                                    android:text=""
                                    android:textColor="@color/buttonBackgroundColor"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:fontFamily="@font/roboto_light"
                                    android:gravity="center"
                                    android:padding="4dp"
                                    android:text="Date of Birth"
                                    android:textSize="15dp"
                                    android:textStyle="italic"
                                    android:id="@+id/ba_adap_tv_title_dateof"/>

                                <TextView
                                    android:id="@+id/ba_alt_tv_dob"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_light"
                                    android:gravity="center"
                                    android:padding="4dp"
                                    android:text=""
                                    android:textColor="@color/buttonBackgroundColor"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:fontFamily="@font/roboto_light"
                                    android:gravity="center"
                                    android:padding="4dp"
                                    android:text="Birth Type"
                                    android:textSize="15dp"
                                    android:textStyle="italic"
                                    android:id="@+id/ba_adap_tv_title_last"/>

                                <TextView
                                    android:id="@+id/ba_alt_tv_birthType"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_light"
                                    android:gravity="center"
                                    android:padding="4dp"
                                    android:text=""
                                    android:textColor="@color/buttonBackgroundColor"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>

</LinearLayout>