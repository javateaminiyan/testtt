<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:id="@+id/root_layout"
    tools:context=".activity.Trade.ContactUsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:id="@+id/toolbar"
                app:title="Contact Us"
                app:titleTextColor="@color/white"
                android:theme="@style/AppTheme.AppBarOverlay"/>

        </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="?attr/actionBarSize"
        android:scrollbars="none"
        tools:ignore="NotSibling">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:orientation="vertical">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_district"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/et_district"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                                android:focusable="false"
                                android:fontFamily="@font/roboto_medium"
                                android:hint="@string/district"
                                android:textSize="14dp" />
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_panchayat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/et_panchayat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                                android:focusable="false"
                                android:fontFamily="@font/roboto_medium"
                                android:hint="@string/panchayat"
                                android:textSize="14dp" />
                            </android.support.design.widget.TextInputLayout>

                            <Button
                                android:id="@+id/btn_submit"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="8dp"
                                android:background="@color/button_color"
                                android:fontFamily="@font/roboto_medium"
                                android:text="@string/searchcontact"
                                android:textColor="@color/white" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_contact"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:elevation="4dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="20dp">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:weightSum="2"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="14dp"
                                    android:layout_weight="1"
                                    android:layout_marginRight="8dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:layout_marginTop="5dp"
                                    android:layout_gravity="center"
                                    android:text="Executive Officer Name (Tamil) :"/>

                                <TextView
                                    android:id="@+id/tv_eoname_tamil"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="14dp"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="8dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/avvaiyar"
                                    android:text="Raj"/>

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:weightSum="2"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="14dp"
                                    android:layout_weight="1"
                                    android:layout_marginRight="8dp"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto_medium"
                                    android:layout_marginTop="5dp"
                                    android:text="Executive Officer Name (English) :"/>

                                <TextView
                                    android:id="@+id/tv_eoname_english"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="14dp"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="8dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="Raj"/>

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:weightSum="2"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="14dp"
                                    android:layout_weight="1"
                                    android:layout_marginRight="8dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:layout_marginTop="5dp"
                                    android:layout_gravity="center"
                                    android:text="Executive Officer Mobile No :"/>

                                <TextView
                                    android:id="@+id/tv_officeno"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="16dp"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="8dp"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="8754137753"/>

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:weightSum="2"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="14dp"
                                    android:layout_weight="1"
                                    android:layout_marginRight="8dp"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto_medium"
                                    android:layout_marginTop="5dp"
                                    android:text="Office Phone Number : "/>

                                <TextView
                                    android:id="@+id/tv_phone_no"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="14dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="8dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="0510-054545 "/>

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:weightSum="2"
                                android:layout_marginBottom="@dimen/dimen_5dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="14dp"
                                    android:layout_weight="1"
                                    android:layout_marginRight="8dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_gravity="center"
                                    android:text="Office Email : "/>
                                <TextView
                                    android:id="@+id/tv_email"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="14dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="miur@gmail.com "/>

                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>