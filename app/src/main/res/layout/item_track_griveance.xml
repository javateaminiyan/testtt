<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_textview_bottom"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Grievance No"
            android:id="@+id/tv_grievancenumber"
            android:padding="4dp"
            android:background="@drawable/line_textview"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Complain Date"
            android:background="@drawable/line_textview"
            android:id="@+id/tv_complaindate"
            android:padding="4dp"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Complain Type"
            android:background="@drawable/line_textview"
            android:id="@+id/tv_complaintype"
            android:padding="4dp"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Status"
            android:id="@+id/tv_status"
            android:padding="4dp"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>