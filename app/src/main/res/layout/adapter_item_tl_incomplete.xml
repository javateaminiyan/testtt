<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5dp"
        android:elevation="@dimen/dimen_5dp"
        app:cardCornerRadius="@dimen/dimen_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/incomp_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Name  :  V.Vediyappan"
                android:textColor="@color/blackForText"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:id="@+id/incomp_tv_mobileno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Mobile No. : 9344489998	"
                android:textColor="@color/blackForText"
                android:textSize="@dimen/dimen_12sp" />

            <TextView
                android:id="@+id/incomp_tv_emailid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Email-Id : vedi115@gmail.com		"
                android:textColor="@color/blackForText"
                android:textSize="@dimen/dimen_12sp" />

            <TextView
                android:id="@+id/incomp_tv_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_medium"
                android:text="District : Krishnagiri		"
                android:textColor="@color/blackForText"
                android:textSize="@dimen/dimen_12sp"/>

            <TextView
                android:id="@+id/incomp_tv_panchayat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Town Panchayat : Mathigiri"
                android:textColor="@color/blackForText"
                android:textSize="@dimen/dimen_12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#eceded"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/incomp_tv_entrydate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Entry Date : 24/08/2018	"
                    android:textColor="@color/blackForText"
                    android:textSize="@dimen/dimen_12sp" />

                <TextView
                    android:id="@+id/incomp_tv_click"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/ic_double_chevron_right"
                    android:gravity="end|center"
                    android:text="Click to Complete"
                    android:textAlignment="viewEnd"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="#4158b6"
                    android:textSize="@dimen/dimen_12sp"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>