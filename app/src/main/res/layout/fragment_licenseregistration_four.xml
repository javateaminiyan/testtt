<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/li_parent_lay"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="5dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Details of Attachment"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_margin="4dp"
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="@drawable/ed_border_box_linear">
                    <EditText
                        android:id="@+id/et_ApplicationPhoto"
                        android:layout_margin="8dp"
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="12dp"
                        android:focusable="false"
                        android:background="@drawable/edittext_background1"
                        android:fontFamily="@font/roboto_light"
                        android:hint="Applicant Photo *"/>
                        <LinearLayout
                            android:id="@+id/li_applicationphoto_upload"
                            android:layout_weight="2.5"
                            android:layout_width="match_parent"
                            android:background="@color/colorPrimary"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_margin="4dp"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_file_upload_black_24dp"/>
                        </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_margin="4dp"
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="@drawable/ed_border_box_linear">
                    <EditText
                        android:id="@+id/et_address_proof"
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textSize="13dp"
                        android:padding="8dp"
                        android:focusable="false"
                        android:background="@drawable/edittext_background1"
                        android:fontFamily="@font/roboto_light"
                        android:hint="Applicant Address Proof *"/>
                    <LinearLayout
                        android:id="@+id/li_addressproof_upload"
                        android:layout_weight="2.5"
                        android:layout_width="match_parent"
                        android:background="@color/colorPrimary"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_margin="4dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_file_upload_black_24dp"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/li_rental"
                    android:layout_margin="4dp"
                    android:weightSum="3"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="@drawable/ed_border_box_linear">
                    <EditText
                        android:id="@+id/et_rental"
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:textSize="13dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@drawable/edittext_background1"
                        android:padding="8dp"
                        android:focusable="false"
                        android:fontFamily="@font/roboto_light"
                        android:hint="@string/rentaldoc"/>
                    <LinearLayout
                        android:id="@+id/li_rental_upload"
                        android:layout_weight="2.5"
                        android:layout_width="match_parent"
                        android:background="@color/colorPrimary"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_margin="4dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_file_upload_black_24dp"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/li_property_receipt"
                    android:layout_margin="4dp"
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="@drawable/ed_border_box_linear">
                    <EditText
                        android:id="@+id/et_property_receipt"
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:textSize="13dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@drawable/edittext_background1"
                        android:padding="8dp"
                        android:focusable="false"
                        android:fontFamily="@font/roboto_light"
                        android:hint="Property Tax Receipt (Latest) *" />
                    <LinearLayout
                        android:id="@+id/li_property_receipt_upload"
                        android:layout_weight="2.5"
                        android:layout_width="match_parent"
                        android:background="@color/colorPrimary"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_margin="4dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_file_upload_black_24dp"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/li_noc"
                    android:layout_margin="4dp"
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="@drawable/ed_border_box_linear">
                    <EditText
                        android:id="@+id/et_noc_doc"
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textSize="13dp"
                        android:background="@drawable/edittext_background1"
                        android:padding="8dp"
                        android:fontFamily="@font/roboto_light"
                        android:hint="N. O. C Document *"/>
                    <LinearLayout
                        android:id="@+id/li_noc_upload"
                        android:layout_weight="2.5"
                        android:layout_width="match_parent"
                        android:background="@color/colorPrimary"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_margin="4dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_file_upload_black_24dp"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/li_machinespe"
                    android:layout_margin="4dp"
                    android:weightSum="3"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="@drawable/ed_border_box_linear">
                    <EditText
                        android:id="@+id/et_machinespec_doc"
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textSize="13dp"
                        android:focusable="false"
                        android:background="@drawable/edittext_background1"
                        android:padding="8dp"
                        android:fontFamily="@font/roboto_light"
                        android:hint="@string/machinespec" />
                    <LinearLayout
                        android:id="@+id/li_machinespec_upload"
                        android:layout_weight="2.5"
                        android:layout_width="match_parent"
                        android:background="@color/colorPrimary"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_margin="4dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_file_upload_black_24dp"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/li_machineInstallation_dgm"
                    android:layout_margin="4dp"
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="@drawable/ed_border_box_linear">
                    <EditText
                        android:id="@+id/et_machineinstalltion_doc"
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textSize="13dp"
                        android:focusable="false"
                        android:background="@drawable/edittext_background1"
                        android:padding="8dp"
                        android:fontFamily="@font/roboto_light"
                        android:hint="@string/machineinstallation" />
                    <LinearLayout
                        android:id="@+id/li_machine_installation_upload"
                        android:layout_weight="2.5"
                        android:layout_width="match_parent"
                        android:background="@color/colorPrimary"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_margin="4dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_file_upload_black_24dp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#cc3300"
            android:fontFamily="@font/roboto_medium"
            android:text="Back"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/fragment_body_text_size"
            android:textStyle="bold" />
        <Button
            android:layout_weight="1"
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#009933"
            android:fontFamily="@font/roboto_medium"
            android:text="Submit"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/fragment_body_text_size"
            android:textStyle="bold" />
    </LinearLayout>
    </LinearLayout>
</ScrollView>