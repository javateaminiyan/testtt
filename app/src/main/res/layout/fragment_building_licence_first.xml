<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ashok.etown2.BuildingPlan.Fragments.BuildingLicenseFirstFragment">
       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:scrollbars="none">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/li_parent_lay"
               android:orientation="vertical">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="4dp"
                   android:fontFamily="@font/roboto_medium"
                   android:textStyle="bold"
                   android:text="Applicant and Building Info"/>
               <android.support.v7.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="4dp"
                   android:background="@color/building_plan_card">
                   <LinearLayout
                       android:layout_margin="8dp"
                       android:background="@drawable/dotted"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
                       <LinearLayout
                           android:orientation="vertical"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_margin="4dp">
                           <LinearLayout
                               android:layout_margin="4dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal">
                               <TextView
                                   android:layout_weight="1"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:padding="4dp"
                                   android:textSize="15dp"
                                   android:fontFamily="@font/roboto_light"
                                   android:textStyle="bold"
                                   android:text="Service Catagory"/>
                               <TextView
                                   android:layout_weight="1"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:padding="4dp"
                                   android:textSize="15dp"
                                   android:fontFamily="@font/roboto_light"
                                   android:textStyle="bold"
                                   android:text="Service"/>
                           </LinearLayout>
                           <LinearLayout
                               android:layout_marginLeft="4dp"
                               android:layout_marginRight="4dp"
                               android:layout_marginBottom="4dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal">
                               <EditText
                                   android:layout_marginRight="2dp"
                                   android:layout_weight="1"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:padding="8dp"
                                   android:focusable="false"
                                   android:textSize="15dp"
                                   android:singleLine="true"
                                   android:background="@drawable/edittext_background_building_plan"
                                   android:fontFamily="@font/roboto_light"
                                   android:id="@+id/et_service_catagory"
                                   android:hint="Service Catagory"/>
                               <EditText
                                   android:layout_weight="1"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:padding="8dp"
                                   android:focusable="false"
                                   android:layout_marginLeft="2dp"
                                   android:textSize="15dp"
                                   android:singleLine="true"
                                   android:fontFamily="@font/roboto_light"
                                   android:background="@drawable/edittext_background_building_plan"
                                   android:id="@+id/et_service"
                                   android:hint="Service"/>
                           </LinearLayout>
                           <LinearLayout
                               android:layout_margin="4dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal">
                               <TextView
                                   android:layout_weight="1"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:padding="4dp"
                                   android:textSize="15dp"
                                   android:fontFamily="@font/roboto_light"
                                   android:textStyle="bold"
                                   android:text="District"/>
                               <TextView
                                   android:layout_weight="1"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:padding="4dp"
                                   android:textSize="15dp"
                                   android:fontFamily="@font/roboto_light"
                                   android:textStyle="bold"
                                   android:text="Town Panchayat"/>
                           </LinearLayout>
                           <LinearLayout
                               android:layout_marginLeft="4dp"
                               android:layout_marginRight="4dp"
                               android:layout_marginBottom="4dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal">
                               <EditText
                                   android:layout_marginRight="2dp"
                                   android:layout_weight="1"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:padding="8dp"
                                   android:textSize="15dp"
                                   android:focusable="false"
                                   android:background="@drawable/edittext_background_building_plan"
                                   android:fontFamily="@font/roboto_light"
                                   android:id="@+id/et_distrcit"
                                   android:hint="District"/>
                               <EditText
                                   android:layout_weight="1"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:padding="8dp"
                                   android:layout_marginLeft="2dp"
                                   android:textSize="15dp"
                                   android:focusable="false"
                                   android:fontFamily="@font/roboto_light"
                                   android:background="@drawable/edittext_background_building_plan"
                                   android:id="@+id/et_townpanchayat"
                                   android:hint="Town Panchayat"/>
                           </LinearLayout>
                       </LinearLayout>

                   </LinearLayout>
               </android.support.v7.widget.CardView>
               <android.support.v7.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="8dp"
                   app:cardBackgroundColor="#eaeaea">
                   <LinearLayout
                       android:layout_margin="4dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
                       <LinearLayout
                           android:orientation="vertical"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_margin="4dp">
                           <LinearLayout
                               android:layout_margin="4dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal">
                               <TextView
                                   android:layout_gravity="center"
                                   android:layout_weight="1"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:padding="4dp"
                                   android:textSize="15dp"
                                   android:fontFamily="@font/roboto_light"
                                   android:textStyle="bold"
                                   android:text="Application Name *"/>
                               <EditText
                                   android:layout_gravity="center"
                                   android:layout_weight="1"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:padding="8dp"
                                   android:singleLine="true"
                                   android:id="@+id/et_applicant_name"
                                   android:textSize="15dp"
                                   android:fontFamily="@font/roboto_light"
                                   android:textStyle="bold"
                                   android:background="@drawable/ed_border_box_linear"
                                   android:hint="Application Name"/>
                           </LinearLayout>
                           <LinearLayout
                               android:layout_margin="4dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal">
                               <TextView
                                   android:layout_gravity="center"
                                   android:layout_weight="1"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:padding="4dp"
                                   android:textSize="15dp"
                                   android:fontFamily="@font/roboto_light"
                                   android:textStyle="bold"
                                   android:text="Father / Husband Name *"/>
                               <EditText
                                   android:layout_gravity="center"
                                   android:layout_weight="1"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:padding="8dp"
                                   android:textSize="15dp"
                                   android:id="@+id/et_father_husband_name"
                                   android:singleLine="true"
                                   android:fontFamily="@font/roboto_light"
                                   android:textStyle="bold"
                                   android:background="@drawable/ed_border_box_linear"
                                   android:hint="Father / Husband Name"/>
                           </LinearLayout>
                           <LinearLayout
                               android:layout_margin="4dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal">
                               <TextView
                                   android:layout_gravity="center"
                                   android:layout_weight="1"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:padding="4dp"
                                   android:textSize="15dp"
                                   android:fontFamily="@font/roboto_light"
                                   android:textStyle="bold"
                                   android:text="Mobile No*"/>
                               <EditText
                                   android:layout_gravity="center"
                                   android:layout_weight="1"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:padding="8dp"
                                   android:textSize="15dp"
                                   android:singleLine="true"
                                   android:inputType="number"
                                   android:maxLength="10"
                                   android:id="@+id/et_mobileno"
                                   android:fontFamily="@font/roboto_light"
                                   android:textStyle="bold"
                                   android:background="@drawable/ed_border_box_linear"
                                   android:hint="Mobile No"/>
                           </LinearLayout>
                           <LinearLayout
                               android:layout_margin="4dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal">
                               <TextView
                                   android:layout_gravity="center"
                                   android:layout_weight="1"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:padding="4dp"
                                   android:textSize="15dp"
                                   android:fontFamily="@font/roboto_light"
                                   android:textStyle="bold"
                                   android:text="E - Mail ID*"/>
                               <EditText
                                   android:layout_gravity="center"
                                   android:layout_weight="1"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:padding="8dp"
                                   android:id="@+id/et_mailid"
                                   android:textSize="15dp"
                                   android:inputType="textEmailAddress"
                                   android:singleLine="true"
                                   android:fontFamily="@font/roboto_light"
                                   android:textStyle="bold"
                                   android:background="@drawable/ed_border_box_linear"
                                   android:hint="E - Mail ID"/>
                           </LinearLayout>
                           <LinearLayout
                               android:layout_margin="4dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal">
                               <TextView
                                   android:layout_gravity="center"
                                   android:layout_weight="1"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:padding="4dp"
                                   android:textSize="15dp"
                                   android:fontFamily="@font/roboto_light"
                                   android:textStyle="bold"
                                   android:text="Communication Address*"/>
                               <EditText
                                   android:layout_weight="1"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="2dp"
                                   android:background="@drawable/edittext_background"
                                   android:inputType="textMultiLine"
                                   android:minHeight="60dp"
                                   android:padding="5dp"
                                   android:hint="Address"
                                   android:id="@+id/et_per_permanent_address"
                                   android:textSize="16sp" />
                           </LinearLayout>
                       </LinearLayout>

                   </LinearLayout>
               </android.support.v7.widget.CardView>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <Button
                       android:layout_weight="1"
                       android:id="@+id/btn_next"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_margin="8dp"
                       android:background="#009933"
                       android:fontFamily="@font/roboto_medium"
                       android:text="Next"
                       android:textAlignment="center"
                       android:textAllCaps="false"
                       android:textColor="@color/white"
                       android:textSize="@dimen/fragment_body_text_size"
                       android:textStyle="italic|bold" />
               </LinearLayout>

           </LinearLayout>
       </ScrollView>

    </FrameLayout>
</layout>
