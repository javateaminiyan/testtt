<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rootlayout"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/textView_orderStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text=""
                android:fontFamily="@font/roboto_medium"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_below="@+id/textView_orderStatus"
                android:text="@string/orderId" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/roboto_medium"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_below="@+id/textView11"
                android:text="@string/trackingId" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView12"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="@string/bankReferenceNo" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_below="@+id/textView13"
                android:text="@string/order_status" />

            <TextView
                android:id="@+id/textView_orderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_below="@+id/textView_orderStatus"
                android:text="New Text" />

            <TextView
                android:id="@+id/textView_trackingId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_below="@+id/textView_orderId"
                android:text="New Text" />

            <TextView
                android:id="@+id/textView_bankRefNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_alignEnd="@+id/textView_trackingId"
                android:layout_alignRight="@+id/textView_trackingId"
                android:layout_below="@+id/textView_trackingId"
                android:text="New Text" />

            <TextView
                android:id="@+id/textView_OrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_below="@+id/textView_bankRefNum"
                android:text="New Text" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_below="@+id/textView14"
                android:text="@string/paymentMode" />

            <TextView
                android:id="@+id/textView_paymentMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/roboto_medium"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_below="@+id/textView_OrderStatus"
                android:text="New Text" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_below="@+id/textView19"
                android:text="@string/bankName" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView21"
                android:text="@string/statusMessage"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:fontFamily="@font/roboto_medium"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_below="@+id/textView22"
                android:text="@string/amount" />

            <TextView
                android:id="@+id/textView_cardName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/roboto_medium"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_below="@+id/textView_paymentMode"
                android:text="New Text" />

            <TextView
                android:id="@+id/textView_statusMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/roboto_medium"
                android:layout_below="@+id/textView_cardName"
                android:text="New Text"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_below="@+id/textView_statusMessage"
                android:text="New Text" />

            <Button
                android:id="@+id/buttonHome"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_height="@dimen/dimen_30dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_medium"
                android:layout_below="@+id/textView_amount"
                android:layout_centerHorizontal="true"
               android:onClick="home"
                android:text="@string/home" />

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>