<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/vrh_rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:elevation="8dp"
        app:cardCornerRadius="@dimen/dimen_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/blackForText"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/query_date"
                    android:textColor="@color/blackForText"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/vq_tv_querydate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light"
                    android:text=""
                    android:textColor="@color/blackForText"
                    android:textStyle="italic|bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/referenceno"
                    android:textColor="@color/blackForText"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tv_onlineapplication_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light"
                    android:text=""
                    android:textColor="@color/blackForText"
                    android:textStyle="italic|bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/query"
                    android:textColor="@color/blackForText"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/vq_tv_query"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light"
                    android:text=""
                    android:textColor="@color/blackForText"
                    android:textSize="14sp"
                    android:textStyle="italic|bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/answer"
                    android:textColor="@color/blackForText"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/vq_tv_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light"
                    android:text=""
                    android:textColor="@color/blackForText"
                    android:textSize="14sp"
                    android:textStyle="italic|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/answer_date"
                    android:textColor="@color/blackForText"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/vq_tv_answerdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light"
                    android:text=""
                    android:textColor="@color/blackForText"
                    android:textSize="14sp"
                    android:textStyle="italic|bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/district"
                    android:textColor="@color/blackForText"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/vq_tv_district"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light"
                    android:text=""
                    android:textColor="@color/blackForText"
                    android:textSize="14sp"
                    android:textStyle="italic|bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/panchayat"
                    android:textColor="@color/blackForText"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/vq_tv_panchayat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light"
                    android:text=""
                    android:textColor="@color/blackForText"
                    android:textSize="14sp"
                    android:textStyle="italic|bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btn_reply"
                    style="@style/Widget.AppCompat.ButtonBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button_violet"
                    android:drawablePadding="@dimen/dimen_5dp"
                    android:fontFamily="@font/roboto_light"
                    android:minHeight="40dp"
                    android:text="@string/reply"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dimen_14sp"
                    android:textStyle="italic|bold"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/linear_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_reply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/ed_border_box"
                    android:hint="Enter Message"
                    android:minLines="3"
                    android:textSize="12dp"
                    android:fontFamily="@font/roboto_light"
                    android:padding="@dimen/dimen_14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="5dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_send_reply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button_violet"
                        android:minHeight="40dp"
                        android:text="send"
                        android:fontFamily="@font/roboto_light"
                        android:textSize="@dimen/dimen_14sp" />

                    <Button
                        android:id="@+id/btn_cancel_reply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/bg_button_violet"
                        android:minHeight="40dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="cancel"
                        android:textSize="14dp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/vrh_rl_bottom"
        android:layout_marginTop="-25dp"
        android:elevation="5dp"
        app:cardBackgroundColor="#4964d6"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_cardview_gradient_violet"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vq_tv_qastatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_light"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold|italic" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>