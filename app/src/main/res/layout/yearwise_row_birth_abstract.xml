<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Year"
            android:id="@+id/year_wise_year"
            android:padding="4dp"
            android:background="@drawable/line_textview"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Live Birth"
            android:background="@drawable/line_textview"
            android:id="@+id/year_wise_live_birth"
            android:padding="4dp"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Still Birth"
            android:background="@drawable/line_textview"
            android:id="@+id/year_wise_still_birth"
            android:padding="4dp"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total"
            android:background="@drawable/line_textview_bottom"
            android:id="@+id/year_wise_total"
            android:padding="4dp"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>