<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rootlayout"
    android:background="@drawable/background">
    <android.support.v7.widget.Toolbar
        android:id="@+id/nontax_newassessment_toolbar"
        android:layout_width="match_parent"
        app:title="New Assessment"
        app:titleTextColor="@color/white"
        android:layout_height="?attr/actionBarSize"
        style="@style/AppTheme"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:elevation="5dp"
        app:cardCornerRadius="5dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="New Assessment"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="italic|bold" />

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:fontFamily="@font/roboto_light"
                    android:hint="District *"
                    android:focusable="false"
                    android:id="@+id/et_district"
                    android:inputType="none"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/fragment_body_text_size"
                    android:textStyle="italic"
                    android:gravity="start" />

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:id="@+id/et_panchayat"
                    android:focusable="false"
                    android:fontFamily="@font/roboto_light"
                    android:hint="Panchayat *"
                    android:inputType="none"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/fragment_body_text_size"
                    android:textStyle="italic"


                    android:gravity="start" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:hint="Name *"
                        android:id="@+id/et_name"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/fragment_body_text_size"
                        android:textStyle="italic"
                        android:gravity="start" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:hint="Mobile No *"
                        android:id="@+id/et_mobileno"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/fragment_body_text_size"
                        android:textStyle="italic"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:hint="Email Id *"
                        android:id="@+id/et_emailid"
                        android:inputType="text"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/fragment_body_text_size"
                        android:textStyle="italic"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:hint="Lease Name *"
                        android:id="@+id/et_leasename"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/fragment_body_text_size"
                        android:textStyle="italic"
                        android:gravity="start" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:hint="Door No *"
                        android:id="@+id/et_doorno"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/fragment_body_text_size"
                        android:textStyle="italic"
                        android:gravity="start" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:hint="Ward No *"
                        android:id="@+id/et_wardno"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/fragment_body_text_size"
                        android:focusable="false"
                        android:textStyle="italic"
                        android:gravity="start" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:hint="Street Name *"
                        android:id="@+id/et_streetname"
                        android:inputType="textEmailAddress"
                        android:textAlignment="viewStart"
                        android:focusable="false"
                        android:textSize="@dimen/fragment_body_text_size"
                        android:textStyle="italic"/>
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:layout_weight="1"
                        android:id="@+id/btn_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@color/buttonBackgroundColor"
                        android:fontFamily="@font/roboto_light"
                        android:text="Submit"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/fragment_body_text_size"
                        android:textStyle="italic|bold" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>

</LinearLayout>
