<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical" >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:elevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/side_line_cardview"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:padding="4dp"
                            android:text="Child Name"
                            android:textStyle="italic"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/bcs_tv_child_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:padding="4dp"
                            android:text=""
                            android:textSize="15sp"
                            android:textStyle="bold|italic"
                            android:textColor="@color/buttonBackgroundColor"/>
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:padding="4dp"
                            android:text="Father Name"
                            android:textStyle="italic"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/bcs_tv_father_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:padding="4dp"
                            android:text=""
                            android:textSize="15sp"
                            android:textStyle="bold|italic"
                            android:textColor="@color/buttonBackgroundColor"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:padding="4dp"
                            android:text="Mother Name"
                            android:textStyle="italic"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/bcs_tv_mother_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:padding="4dp"
                            android:text=""
                            android:textSize="15sp"
                            android:textStyle="bold|italic"
                            android:textColor="@color/buttonBackgroundColor"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_light"
                            android:gravity="center|start"
                            android:padding="4dp"
                            android:text="Gender"
                            android:textStyle="italic"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/bcs_tv_gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_light"
                            android:gravity="center|start"
                            android:padding="4dp"
                            android:text=""
                            android:textSize="15sp"
                            android:textStyle="bold|italic"
                            android:textColor="@color/buttonBackgroundColor"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_light"
                            android:gravity="center|start"
                            android:padding="4dp"
                            android:text="Date of Birth"
                            android:textStyle="italic"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/bcs_tv_dob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_light"
                            android:gravity="center|start"
                            android:padding="4dp"
                            android:text=""
                            android:textSize="15sp"
                            android:textStyle="bold|italic"
                            android:textColor="@color/buttonBackgroundColor"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_light"
                            android:gravity="center|start"
                            android:padding="4dp"
                            android:text="Reg Date"
                            android:textStyle="italic"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/bcs_tv_reg_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_light"
                            android:gravity="center|start"
                            android:padding="4dp"
                            android:text=""
                            android:textSize="15sp"
                            android:textStyle="bold|italic"
                            android:textColor="@color/buttonBackgroundColor"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_light"
                            android:gravity="center|start"
                            android:padding="4dp"
                            android:text="Name RegDate"
                            android:textStyle="italic"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/bcs_tv_name_reg_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_light"
                            android:gravity="center|start"
                            android:padding="4dp"
                            android:text=""
                            android:textSize="15sp"
                            android:textStyle="bold|italic"
                            android:textColor="@color/buttonBackgroundColor"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="top|end"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_down"
        android:contentDescription="@null"
        android:scaleType="fitStart"
        android:padding="8dp"
        android:layout_margin="5dp"
        android:id="@+id/bcs_adap_iv_download"/>

</RelativeLayout>

